# Local Development Environment Variables
# Copy this file to .env.local and fill in your actual values

# MongoDB - Get from MongoDB Atlas
MONGODB_URL=mongodb+srv://username:password@cluster0.xxxxx.mongodb.net/eshop?retryWrites=true&w=majority

# NextAuth - For authentication
# NEXTAUTH_URL should be your local development URL
NEXTAUTH_URL=http://localhost:3000
# Generate NEXTAUTH_SECRET with: openssl rand -base64 32
NEXTAUTH_SECRET=

# Cloudinary - For image uploads (get from cloudinary.com)
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME=
NEXT_PUBLIC_CLOUDINARY_API_KEY=
CLOUDINARY_SECRET=

# PayPal - For payment processing (get from developer.paypal.com)
NEXT_PUBLIC_PAYPAL_CLIENT_ID=

# Node Environment
NODE_ENV=development
